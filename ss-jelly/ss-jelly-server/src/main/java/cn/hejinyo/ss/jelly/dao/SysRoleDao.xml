<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hejinyo.ss.jelly.dao.SysRoleDao">

    <!-- 实体映射 -->
    <resultMap id="BaseResultMap" type="cn.hejinyo.ss.jelly.model.entity.SysRoleEntity">
        <id column="role_id" jdbcType="INTEGER" property="roleId"/>
        <result column="role_code" jdbcType="VARCHAR" property="roleCode"/>
        <result column="role_name" jdbcType="VARCHAR" property="roleName"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="seq" jdbcType="TINYINT" property="seq"/>
        <result column="state" jdbcType="TINYINT" property="state"/>
        <result column="create_id" jdbcType="INTEGER" property="createId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_id" jdbcType="INTEGER" property="updateId"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <!-- 表基本列 -->
    <sql id="Base_Column_List">
        role_id, role_code, role_name, description, seq, state, create_id, create_time, update_id,
    update_time
    </sql>

    <!-- 通用查询sql -->
    <sql id="Base_Where_SQL">
        <if test="roleCode != null and !&quot;&quot;.equals(roleCode)">and role_code = #{roleCode}</if>
        <if test="roleName != null and !&quot;&quot;.equals(roleName)">and role_name = #{roleName}</if>
        <if test="description != null and !&quot;&quot;.equals(description)">and description = #{description}</if>
        <if test="seq != null and !&quot;&quot;.equals(seq)">and seq = #{seq}</if>
        <if test="state != null and !&quot;&quot;.equals(state)">and state = #{state}</if>
        <if test="createId != null and !&quot;&quot;.equals(createId)">and create_id = #{createId}</if>
        <if test="createTime != null and !&quot;&quot;.equals(createTime)">and create_time = #{createTime}</if>
        <if test="updateId != null and !&quot;&quot;.equals(updateId)">and update_id = #{updateId}</if>
        <if test="updateTime != null and !&quot;&quot;.equals(updateTime)">and update_time = #{updateTime}</if>
    </sql>

    <!-- 保存一条记录 -->
    <insert id="save" keyProperty="roleId" useGeneratedKeys="true">
        insert into sys_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != roleCode">role_code,</if>
            <if test="null != roleName">role_name,</if>
            <if test="null != description">description,</if>
            <if test="null != seq">seq,</if>
            <if test="null != state">state,</if>
            <if test="null != createId">create_id,</if>
            <if test="null != createTime">create_time,</if>
            <if test="null != updateId">update_id,</if>
            <if test="null != updateTime">update_time,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != roleCode">#{roleCode},</if>
            <if test="null != roleName">#{roleName},</if>
            <if test="null != description">#{description},</if>
            <if test="null != seq">#{seq},</if>
            <if test="null != state">#{state},</if>
            <if test="null != createId">#{createId},</if>
            <if test="null != createTime">#{createTime},</if>
            <if test="null != updateId">#{updateId},</if>
            <if test="null != updateTime">#{updateTime},</if>
        </trim>
    </insert>

    <!-- 保存一条完整记录 -->
    <insert id="saveFull" keyProperty="roleId" useGeneratedKeys="true">
        insert into sys_role (role_code, role_name, description, seq, state, create_id, create_time, update_id,
                              update_time)
        values (#{roleCode}, #{roleName}, #{description}, #{seq}, #{state}, #{createId}, #{createTime}, #{updateId},
                #{updateTime})
    </insert>

    <!-- 更新一条记录 -->
    <update id="update">
        update sys_role
        <set>
            <if test="null != roleCode">role_code = #{roleCode},</if>
            <if test="null != roleName">role_name = #{roleName},</if>
            <if test="null != description">description = #{description},</if>
            <if test="null != seq">seq = #{seq},</if>
            <if test="null != state">state = #{state},</if>
            <if test="null != createId">create_id = #{createId},</if>
            <if test="null != createTime">create_time = #{createTime},</if>
            <if test="null != updateId">update_id = #{updateId},</if>
            <if test="null != updateTime">update_time = #{updateTime},</if>
        </set>
        where role_id = #{roleId}
    </update>

    <!-- 更新一条完整记录 -->
    <update id="updateFull">
        update sys_role
        set role_code   = #{roleCode},
            role_name   = #{roleName},
            description = #{description},
            seq         = #{seq},
            state       = #{state},
            create_id   = #{createId},
            create_time = #{createTime},
            update_id   = #{updateId},
            update_time = #{updateTime}
        where role_id = #{roleId}
    </update>

    <!-- 删除给定主键的记录 -->
    <delete id="deleteByPk">
        delete
        from sys_role
        where role_id = #{roleId}
    </delete>

    <!-- 主键查找一条记录 -->
    <select id="findByPk" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role
        where role_id = #{roleId}
    </select>

    <!-- 查询列表 -->
    <select id="findList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role
        where
        <include refid="Base_Where_SQL"/>
    </select>

    <!-- 分页查询 -->
    <select id="findPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_role
        <where>
            <if test="roleCode != null and !&quot;&quot;.equals(roleCode)">and role_code like
                concat('%',#{roleCode},'%')
            </if>
            <if test="roleName != null and !&quot;&quot;.equals(roleName)">and role_name like
                concat('%',#{roleName},'%')
            </if>
            <if test="description != null and !&quot;&quot;.equals(description)">and description like
                concat('%',#{description},'%')
            </if>
            <if test="seq != null and !&quot;&quot;.equals(seq)">and seq = #{seq}</if>
            <if test="state != null and !&quot;&quot;.equals(state)">and state = #{state}</if>
            <if test="createId != null and !&quot;&quot;.equals(createId)">and create_id = #{createId}</if>
            <if test="createTime != null and !&quot;&quot;.equals(createTime)">and DATE_FORMAT(create_time,'%Y-%m-%d') =
                STR_TO_DATE(#{createTime},'%Y-%m-%d')
            </if>
            <if test="updateId != null and !&quot;&quot;.equals(updateId)">and update_id = #{updateId}</if>
            <if test="updateTime != null and !&quot;&quot;.equals(updateTime)">and DATE_FORMAT(update_time,'%Y-%m-%d') =
                STR_TO_DATE(#{updateTime},'%Y-%m-%d')
            </if>
        </where>
    </select>

    <!-- 根据用户ID获取角色字符串列表 -->
    <select id="findRoleCodeSetByUserId" resultType="String">
        select role_code
        from sys_role sr
                 left join sys_user_role sur on sr.role_id = sur.role_id
        where sr.state = ${@cn.hejinyo.ss.common.consts.CommonConstant$Status@VALID.getValue}
          and sur.user_id = #{userId}
    </select>
</mapper>
